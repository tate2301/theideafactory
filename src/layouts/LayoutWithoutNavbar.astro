---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk&family=Noto+Color+Emoji&family=Inter:wght@400;600;700&display=swap"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="text-zinc-800 subpixel-antialiased bg-zinc-50 text-lg">
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "Soehne Buch";
        font-weight: var(--f-weight);
        font-style: normal;
        src: url("/soehne-buch.woff2") format("woff2");
    }
    :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #da62c4 30%,
            white 60%
        );
    }
    html {
        font-family: "Noto Color Emoji", sans-serif !important;
        font-family: "Inter", sans-serif !important;
    }
    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
            DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "Soehne Buch", sans-serif !important;
    }

    .uppercase {
        font-weight: 600;
    }
</style>
